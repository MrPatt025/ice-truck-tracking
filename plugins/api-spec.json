{
  "openapi": "3.0.0",
  "info": {
    "title": "Ice Truck Plugin API",
    "version": "1.0.0",
    "description": "Plugin API for extending Ice Truck Tracking functionality"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api/v1/plugins",
      "description": "Development server"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Register a new plugin",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PluginRegistration"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Plugin registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PluginResponse"
                }
              }
            }
          }
        }
      }
    },
    "/hooks/{event}": {
      "post": {
        "summary": "Execute plugin hooks for specific events",
        "parameters": [
          {
            "name": "event",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["truck.location.update", "geofence.violation", "alert.created"]
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HookPayload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Hook executed successfully"
          }
        }
      }
    },
    "/data/trucks": {
      "get": {
        "summary": "Get truck data for plugins",
        "security": [{"PluginAuth": []}],
        "responses": {
          "200": {
            "description": "Truck data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TruckData"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PluginRegistration": {
        "type": "object",
        "required": ["name", "version", "endpoints", "hooks"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Plugin name"
          },
          "version": {
            "type": "string",
            "description": "Plugin version"
          },
          "description": {
            "type": "string",
            "description": "Plugin description"
          },
          "endpoints": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PluginEndpoint"
            }
          },
          "hooks": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["truck.location.update", "geofence.violation", "alert.created"]
            }
          },
          "permissions": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["read:trucks", "write:alerts", "read:geofences"]
            }
          }
        }
      },
      "PluginEndpoint": {
        "type": "object",
        "required": ["path", "method", "handler"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Endpoint path"
          },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "DELETE"]
          },
          "handler": {
            "type": "string",
            "description": "Handler function URL"
          }
        }
      },
      "PluginResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Plugin ID"
          },
          "apiKey": {
            "type": "string",
            "description": "API key for plugin authentication"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive"]
          }
        }
      },
      "HookPayload": {
        "type": "object",
        "properties": {
          "event": {
            "type": "string"
          },
          "data": {
            "type": "object"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "TruckData": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "plateNumber": {
            "type": "string"
          },
          "latitude": {
            "type": "number"
          },
          "longitude": {
            "type": "number"
          },
          "temperature": {
            "type": "number"
          },
          "speed": {
            "type": "number"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "maintenance"]
          }
        }
      }
    },
    "securitySchemes": {
      "PluginAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-Plugin-Key"
      }
    }
  }
}