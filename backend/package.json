{
    "name":  "@ice-truck/backend",
    "version":  "2.0.0",
    "description":  "Professional Ice Truck Tracking System - Backend API",
    "main":  "index.js",
    "scripts":  {
                    "build":  "echo \u0027Backend build complete\u0027",
                    "start":  "node index.js",
                    "dev":  "nodemon src/index.js",
                    "test":  "jest --runInBand --detectOpenHandles --passWithNoTests --setupFiles ./tests/jest.setup.env.js --setupFilesAfterEnv ./tests/jest.setup.mocks.js",
                    "test:unit":  "jest tests/unit --coverage",
                    "test:integration":  "jest tests/integration",
                    "test:watch":  "jest --watch",
                    "lint":  "eslint . --fix",
                    "lint:fix":  "eslint . --fix",
                    "type-check":  "tsc --noEmit",
                    "format":  "prettier --write .",
                    "clean":  "rm -rf dist coverage",
                    "setup":  "node src/config/database.js",
                    "docker:build":  "docker build -t ice-truck-backend .",
                    "docker:run":  "docker run -p 5000:5000 ice-truck-backend"
                },
    "keywords":  [
                     "ice-truck",
                     "tracking",
                     "gps",
                     "logistics",
                     "api"
                 ],
    "author":  "Ice Truck Tracking Team",
    "license":  "MIT",
    "type":  "commonjs",
    "engines":  {
                    "node":  "\u003e=18.0.0"
                },
    "dependencies":  {
                         "bcrypt":  "^5.1.1",
                         "compression":  "^1.7.4",
                         "cors":  "^2.8.5",
                         "dotenv":  "^16.3.1",
                         "express":  "^4.18.2",
                         "express-rate-limit":  "^7.1.5",
                         "express-validator":  "^7.0.1",
                         "helmet":  "^7.1.0",
                         "joi":  "^17.11.0",
                         "jsonwebtoken":  "^9.0.2",
                         "pino":  "^10.0.0",
                         "pino-pretty":  "^10.2.3",
                         "prom-client":  "^14.2.0",
                         "socket.io":  "^4.7.2",
                         "sqlite3":  "^5.1.6",
                         "swagger-jsdoc":  "^6.2.8",
                         "swagger-ui-express":  "^5.0.0"
                     },
    "devDependencies":  {
                            "@eslint/js":  "^9.0.0",
                            "@types/jest":  "^30.0.0",
                            "eslint":  "^8.57.0",
                            "eslint-config-prettier":  "^9.0.0",
                            "eslint-plugin-security":  "^1.7.1",
                            "husky":  "^8.0.3",
                            "jest":  "^29.7.0",
                            "lint-staged":  "^15.0.2",
                            "nodemon":  "^3.0.1",
                            "prettier":  "^3.0.3",
                            "supertest":  "^6.3.3",
                            "ts-jest":  "^29.4.4"
                        }
}
