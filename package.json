{
  "name": "ice-truck-tracking",
  "version": "2.0.0",
  "description": "Professional Ice Truck Tracking System - Enterprise Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "install": "pnpm install",
    "build": "turbo run build",
    "build:all": "turbo run build --force",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "test:mutation": "turbo run test:mutation",
    "test:all": "turbo run test test:unit test:integration test:e2e",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "clean:all": "turbo run clean && rimraf node_modules .turbo apps/*/node_modules packages/*/node_modules",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "deploy": "npm run build && npm run docker:build && npm run docker:up",
    "deploy:staging": "npm run build && docker-compose -f docker-compose.staging.yml up -d",
    "deploy:production": "npm run build && docker-compose -f docker-compose.production.yml up -d",
    "security:audit": "npm audit --audit-level=high && turbo run security:audit",
    "security:fix": "npm audit fix && turbo run security:fix",
    "deps:update": "npx npm-check-updates -u && pnpm install",
    "deps:dedupe": "pnpm dedupe",
    "health:check": "node scripts/health-check.js",
    "load:test": "node scripts/load-test.js",
    "setup": "pnpm install && turbo run build && npm run docker:up",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/jest-runner": "^8.0.0",
    "@stryker-mutator/typescript-checker": "^8.0.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-check-updates": "^16.14.12",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.19.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.1",
  "keywords": [
    "monorepo",
    "ice-truck",
    "tracking",
    "turborepo",
    "enterprise",
    "typescript",
    "react",
    "node.js"
  ],
  "author": "Ice Truck Tracking Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ice-truck-tracking/monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/ice-truck-tracking/monorepo/issues"
  },
  "homepage": "https://github.com/ice-truck-tracking/monorepo#readme"
}
