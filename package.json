{
  "name": "ice-truck-tracking",
  "version": "2.0.0",
  "description": "Professional Ice Truck Tracking System - Enterprise Monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "dashboard",
    "mobile-app",
    "sdk/edge",
    "sdk/mobile"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "install": "pnpm install",
    "build": "npx turbo run build",
    "build:all": "turbo run build --force",
    "test": "npx turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "test:mutation": "npx turbo run test:mutation",
    "test:all": "turbo run test test:unit test:integration test:e2e",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start",
    "lint": "npx eslint . --ext .js,.ts,.tsx",
    "lint:fix": "npx eslint . --ext .js,.ts,.tsx --fix",
    "format": "npx prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "clean:all": "turbo run clean && rimraf node_modules .turbo backend/node_modules dashboard/node_modules mobile-app/node_modules sdk/edge/node_modules sdk/mobile/node_modules",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "deploy": "npm run build && npm run docker:build && npm run docker:up",
    "deploy:staging": "npm run build && docker-compose -f docker-compose.staging.yml up -d",
    "deploy:production": "npm run build && docker-compose -f docker-compose.production.yml up -d",
    "security:audit": "npm audit --audit-level=high && turbo run security:audit",
    "security:fix": "npm audit fix && turbo run security:fix",
    "deps:update": "npx npm-check-updates -u && pnpm install",
    "deps:dedupe": "pnpm dedupe",
    "health:check": "node scripts/health-check.js",
    "load:test": "node scripts/load-test.js",
    "setup": "pnpm install && turbo run build && npm run docker:up",
    "prepare": "husky install",
    "bootstrap": "npm install && npm run build --workspaces && npm run lint --workspaces && npm test --workspaces",
    "commitlint": "commitlint --from=HEAD~1",
    "release": "npx semantic-release",
    "security:snyk": "npx snyk test",
    "analyze:frontend": "cd dashboard && npm run analyze",
    "snyk:auth": "npx snyk auth"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/jest-runner": "^8.0.0",
    "@stryker-mutator/typescript-checker": "^8.0.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "npm-check-updates": "^16.14.12",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "conventional-changelog-cli": "^4.1.0",
    "stryker-cli": "^6.0.0",
    "snyk": "^1.1300.0",
    "next-bundle-analyzer": "^1.0.0"
  },
  "engines": {
    "node": ">=18.19.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.1",
  "keywords": [
    "monorepo",
    "ice-truck",
    "tracking",
    "turborepo",
    "enterprise",
    "typescript",
    "react",
    "node.js"
  ],
  "author": "Ice Truck Tracking Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ice-truck-tracking/monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/ice-truck-tracking/monorepo/issues"
  },
  "homepage": "https://github.com/ice-truck-tracking/monorepo#readme",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}
